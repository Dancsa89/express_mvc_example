<table class="table table-striped">
  <tbody>
    {{#each videogames}}
    <tr>
      <td>{{id}}</td>
      <td>{{distributor}}</td>
      <td>{{name}}</td>
      <td>{{type}}</td>
      <td><a href="/videogames/{{id}}" class="btn btn-primary">Show</a></td>
      <td><a href="/videogames/{{id}}/edit" class="btn btn-secondary">Edit</a></td>
       <form method="POST" action="/pokemons/{{id}}?_method=DELETE">
      <td><input class="btn btn-danger" type="submit" value="Delete"/></td>
      </form>
    </tr>
    {{/each}}    
    <form method="POST" action="/pokemons/{{id}}?_method=DELETE"></form>
    <td><a href="/videogames/new" class="btn btn-success">New</a></td>
    </form>
  </tbody>
</table>