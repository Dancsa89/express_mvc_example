<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Edit</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div>
        <form method="POST" action="/pokemons/{{pokemon.id}}?_method=PUT">
          <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" name="type" value="{{pokemon.type}}" />
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="{{pokemon.name}}" />
          </div>
      </div>
      <div class="form-group">
        <label for="cp">Combat Point</label>
        <input type="text" class="form-control" name="cp" value="{{pokemon.cp}}" />
      </div>
      <input class="btn btn-warning" type="submit" value="Save"/>
      </form>
    </div>
  </div>
</div>